{
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "globals": { // Don't want any of these to be quite this global
        "WScript": false,
        "phantom": false,
        "getDialogHandler": true,
        "getDDMMYYYY": true,
        "getHHMM": true,
        "getCoreApiProxy": true,
        "initialiseDateTimePickers": true,
        "parseDate": true,
        "getTables": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ],
        "no-fallthrough": [
            "error",
            { "commentPattern": "Drop thro" }
        ],
        "no-func-assign": [
            "off"
        ],
        "no-redeclare": [
            "off"
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "no-tabs": [
            "error"
        ]
    }
}

