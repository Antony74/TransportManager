{
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "globals": { // Don't want any of these to be quite this global
        "WScript": false,
        "phantom": false,
        "getDialogHandler": true,
        "getDDMMYYYY": true,
        "getHHMM": true,
        "getCoreApiProxy": true,
        "initialiseDateTimePickers": true,
        "parseDate": true,
        "getTables": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            2, // "error",
            "windows"
        ],
        "quotes": [
            0, // was "error",
            "single"
        ],
        "semi": [
            2, // "error",
            "always"
        ],
        "no-console": [
            0 // "off"
        ],
        "no-fallthrough": [
            0 // was "error"
            //			{ "commentPattern": "Drop thro" }
        ],
        "no-func-assign": [
            0 // "off"
        ],
        "no-redeclare": [
            0 // "off"
        ],
        "brace-style": [
            2, // "error"
            "1tbs"
        ]
//        "no-tabs": [
//            2  // "error"
//        ]
    }
}

